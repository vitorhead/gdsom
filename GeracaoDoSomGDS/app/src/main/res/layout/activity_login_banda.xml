<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_banda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vitor.geracaodosomgds.loginBanda">

    <TextView
        android:text="Entre e confira os convites para apresentações"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtInfo"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtEmailBanda"
        android:text="Email"
        android:layout_below="@+id/txtInfo"
        android:layout_marginTop="15dp"
        android:paddingLeft="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/txtEmailBanda"
        android:id="@+id/txtEmail" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtSenhaBanda"
        android:text="Senha"
        android:layout_above="@+id/txtSenha"
        android:layout_marginTop="15dp"
        android:paddingLeft="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:id="@+id/txtSenha"
        android:paddingLeft="8dp"
        />

    <Button
        android:text="ENTRAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEntrar"
        android:layout_below="@+id/txtSenha"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"/>

    <Button
        android:text="ESQUECI MINHA SENHA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEsqueciSenha"
        android:layout_below="@+id/btnEntrar"
        android:layout_alignParentStart="true"
        android:paddingLeft="8dp"/>


    <Button
        android:text="NÃO POSSUI UMA CONTA? CADASTRE-SE!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEsqueciSenha"
        android:id="@+id/btnCadastro"
        android:paddingLeft="8dp"/>
</RelativeLayout>
