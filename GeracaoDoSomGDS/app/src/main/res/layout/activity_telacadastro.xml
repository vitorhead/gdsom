<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_telacadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vitor.geracaodosomgds.telacadastro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Digite o nome da banda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblNome"
                android:paddingTop="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:text="Digite o email para o cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNomeCadastro"
                android:id="@+id/lblEmail"
                android:layout_marginTop="26dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtEmail"
                android:layout_below="@+id/lblEmail"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <!--<TextView-->
                <!--android:text="Digite a senha do cadastro"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/txtEmail"-->
                <!--android:layout_marginTop="26dp"-->
                <!--android:id="@+id/lblSenha"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="8dp"/>-->

            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:inputType="textPassword"-->
                <!--android:ems="10"-->
                <!--android:layout_below="@+id/lblSenha"-->
                <!--android:id="@+id/txtSenha"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="8dp"/>-->

            <TextView
                android:id="@+id/lblTelefone"
                android:text="Digite um telefone para entrarmos em contato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/txtEmail"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtTelefone"
                android:layout_below="@+id/lblTelefone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/txtNomeCadastro"
                android:layout_below="@+id/lblNome"
                android:layout_alignParentStart="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/lblDescricao"
                android:text="Use esse espaço para adicionar uma descrição para a banda!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/txtTelefone"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:id="@+id/txtDescricao"
                android:layout_below="@+id/lblDescricao"
                android:layout_alignParentStart="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <Button
                android:text="CONFIRMAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="43dp"
                android:id="@+id/btnConfirmarCadastro"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/btnFoto"
                />

            <TextView
                android:id="@+id/lblSite"
                android:text="Adicione o site da banda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/txtDescricao"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/txtSite"
                android:layout_below="@+id/lblSite"
                android:layout_alignParentStart="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnFoto"
                android:text="CLIQUE E SELECIONE UMA FOTO PARA A BANDA"
                android:layout_below="@id/txtSite" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
