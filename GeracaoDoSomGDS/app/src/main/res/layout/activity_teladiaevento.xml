<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teladiaevento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vitor.geracaodosomgds.teladiaevento">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:id="@+id/layoutDia">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDia"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="28"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutDia">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="ARTISTAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtArtistas"
                android:textColor="@color/primary_text"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="top|left"
                android:paddingLeft="16sp"
                android:layout_margin="6dp" />

            <TextView
                android:text="alfa - folkmetal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtArtistaEvento"
                android:layout_below="@+id/txtArtistas"
                android:layout_alignParentStart="true"
                android:textSize="30sp"
                android:paddingLeft="18dp"
                android:paddingRight="8dp"
                android:layout_margin="6dp"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtInfoEvento"
                android:text="aadadadasdadasdasdd"
                android:layout_below="@+id/txtArtistaEvento"
                android:textSize="18sp"
                android:paddingLeft="18dp"
                android:paddingRight="8dp"
                android:layout_margin="6dp"
                android:textColor="@color/secondary_text"/>


            <Button
                android:text="RESERVA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReserva"
                android:layout_below="@+id/txtInfoEvento"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:onClick="abreReserva"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
